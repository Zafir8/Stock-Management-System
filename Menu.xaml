<Window x:Class="SDAM2_Stock_Management_App.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SDAM2_Stock_Management_App"
        mc:Ignorable="d"
        Title="Stock Management System" Height="450" Width="800" FontSize="14" Background="#0e0d45" Foreground="#eeeeee">
    <Canvas>
        <!-- Title -->
        <TextBlock Text="Welcome to the Stock Management System" 
               Canvas.Left="169" Canvas.Top="54" 
               FontSize="24" Foreground="#eeeeee" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Add a new item button -->
        <Button Content="Add a new item" 
            Width="200" Height="50" 
            Canvas.Left="169" Canvas.Top="138" 
            Background="#4a90e2" Foreground="#eeeeee"
            Click="AddNewItem_Click"/>

        <!-- Remove item from stock button -->
        <Button Content="View Transaction Log" 
            Width="200" Height="50" 
            Canvas.Left="430" Canvas.Top="138" 
            Background="#4a90e2" Foreground="#eeeeee"
            Click="View_Click" RenderTransformOrigin="-0.008,0.491" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Canvas>
</Window>
